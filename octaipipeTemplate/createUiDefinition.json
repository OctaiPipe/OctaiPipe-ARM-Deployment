{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
      "basics": [
        {
          "name": "customerName",
          "type": "Microsoft.Common.TextBox",
          "label": "Customer Name",
          "constraints": {
            "required": true
          }
        }
      ],
      "steps": [
        {
          "name": "settings",
          "label": "Settings",
          "subLabel": "",
          "bladeTitle": "Settings",
          "elements": [
            {
              "name": "managedIdentityName",
              "type": "Microsoft.Common.TextBox",
              "label": "Managed Identity Name",
              "toolTip": "Enter only the name of the Managed Identity",
              "constraints": {
                "required": true
              }
            },
            {
              "name": "managedIdentityResourceGroup",
              "type": "Microsoft.Common.TextBox",
              "label": "Managed Identity Resource Group",
              "defaultValue": "[resourceGroup().name]",
              "toolTip": "Resource group where the Managed Identity is located. If this is the same Resource Group as deloying to, leave blank.",
              "constraints": {
                "required": false
              }
            },
            {
                "name": "userEmails",
                "type": "Microsoft.Common.TextBox",
                "label": "User Emails",
                "toolTip": "Enter email addresses of OctaiPipe users, separated by comma.",
                "multiLine": true,
                "constraints": {
                  "required": true
                }
              }
              
          ]
        }
      ],
      "outputs": {
        "customerName": "[basics('customerName')]",
        "managedIdentityName": "[steps('settings').managedIdentityName]",
        "managedIdentityResourceGroup": "[steps('settings').managedIdentityResourceGroup]",
        "userEmails": "[steps('settings').userEmails]"
      }
    }
  }
  